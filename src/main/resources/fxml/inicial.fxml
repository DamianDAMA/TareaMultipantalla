<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<BorderPane maxHeight="-Infinity" maxWidth="-Infinity"
            minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="400.0" prefWidth="600.0"
            fx:id="menuPrincipal"
            fx:controller="controllers.ControllerPrincipal"
            xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <MenuBar fx:id="menubar" BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" text="Create" onAction="#CreatePersona"/>
            </items>
            <items>
              <MenuItem mnemonicParsing="false" text="Read" onAction="#ReadPersona"/>
            </items>
            <items>
              <MenuItem mnemonicParsing="false" text="Update" onAction="#UpdatePersona"/>
            </items>
            <items>
              <MenuItem mnemonicParsing="false" text="Delete" onAction="#DeletePersona"/>
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
</BorderPane>
